<%= form_for(matchday) do |f| %>
  <%= f.label :sport_type %>
  <%= f.select :sport_type, ["soccer", "basketball", "volleyball", "table tennis"] %>
  <%= f.label :date %>
  <%= f.date_select :date %>
  <%= f.label :mode %>
  <%= f.select :mode, ["1 on 1", "2 on 2", "3 on 3", "4 on 4", "5 on 5", "6 on 6", "7 on 7", "8 on 8"] %>
  <%= f.label :sports_ground %>
  <%= options_from_collection_for_select(SportsGround.all, :id, :name) %>
  <%= f.select(:sports_ground_id) %>
  <%= f.submit %>
<% end %>



